@model IleriRepository.Models.CountyModel

@{
    ViewData["Title"] = "Crud";
}

<h1>Crud</h1>

<h4>@Model.Head</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="County.Id" class="control-label"></label>
                <input asp-for="County.Id" class="form-control" />
                <span asp-validation-for="County.Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="County.CountyName" class="control-label"></label>
                <input asp-for="County.CountyName" class="form-control" />
                <span asp-validation-for="County.CountyName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="County.CreatedDate" class="control-label"></label>
                <input asp-for="County.CreatedDate" class="form-control" />
                <span asp-validation-for="County.CreatedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="County.LastUpdatedDate" class="control-label"></label>
                <input asp-for="County.LastUpdatedDate" class="form-control" />
                <span asp-validation-for="County.LastUpdatedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Choose City:</label>
                <select asp-for="County.CityId" class="form-control" name="County.CityId">
                    @foreach (var item in Model.City)
                    {
                        <option value="@item.Id">@item.CityName</option>
                    }

                </select>

            </div>

            <div class="form-group">
                <input type="submit" value="@Model.Text" class="@Model.Cls" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

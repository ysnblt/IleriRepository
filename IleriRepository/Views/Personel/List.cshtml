                @Html.DisplayFor(modelItem => item.Avenue)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.No)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CountyId)
            </td>
            <td>
                <img src="@item.ImgUrl">
